        },
        {
          "name": "Get My Reports",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/reports/my-reports",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reports", "my-reports"]
            }
          }
        }
