          }
        },
        {
          "name": "Get Nearby Reports",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/reports/nearby?latitude=13.7002&longitude=-89.2243&maxDistance=5000",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reports", "nearby"],
              "query": [
                {
                  "key": "latitude",
